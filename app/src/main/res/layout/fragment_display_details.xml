<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_2x"
    android:paddingBottom="@dimen/padding_2x">

    <LinearLayout
        android:id="@+id/name_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginRight="@dimen/padding_default">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile"
            android:alpha="0.54"/>

        <TextView
            android:id="@+id/display_details_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name"
            android:layout_marginStart="@dimen/padding_2x"
            android:layout_marginLeft="@dimen/padding_2x"
            android:textColor="@color/black"
            android:textSize="@dimen/typography_title"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

    <View
        android:id="@+id/divider_1"
        android:layout_below="@id/name_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/padding_2x"
        android:layout_marginBottom="@dimen/padding_default"
        android:background="@color/dividerColor"/>

    <LinearLayout
        android:id="@+id/details_relative_layout"
        android:layout_below="@id/divider_1"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginRight="@dimen/padding_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/padding_default">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_details"
            android:alpha="0.54"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/padding_2x"
            android:layout_marginLeft="@dimen/padding_2x">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:textColor="@color/black"
                android:textSize="@dimen/typography_title"
                android:fontFamily="sans-serif-medium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age_display"
                    android:textStyle="bold"
                    android:textSize="@dimen/typography_subheading" />

                <TextView
                    android:id="@+id/details_display_age_text_view"
                    android:layout_width="wrap_content"
                    tools:text="00"
                    android:layout_marginStart="@dimen/padding_half"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex_display"
                    android:textSize="@dimen/typography_subheading"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/details_display_sex_text_view"
                    android:layout_width="wrap_content"
                    tools:text="M"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_marginStart="@dimen/padding_half"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_display"
                    android:textSize="@dimen/typography_subheading"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/details_display_phone_text_view"
                    android:layout_width="wrap_content"
                    tools:text="000 000 0000"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_marginStart="@dimen/padding_half"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_display"
                    android:textSize="@dimen/typography_subheading"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/details_display_email_text_view"
                    android:layout_width="wrap_content"
                    tools:text="x@x.com"
                    android:layout_marginStart="@dimen/padding_half"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@id/details_relative_layout"
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/padding_2x"
        android:background="@color/dividerColor"/>

    <LinearLayout
        android:layout_below="@id/divider_2"
        android:id="@+id/bg_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_2x"
        android:paddingRight="@dimen/padding_default"
        android:paddingLeft="@dimen/padding_default"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_drop"
            android:alpha="0.54"
            android:layout_marginRight="@dimen/padding_2x"
            android:layout_marginEnd="@dimen/padding_2x"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/typography_title"
            android:text="@string/select_bg"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="@dimen/padding_half"
            android:layout_marginEnd="@dimen/padding_half"/>

        <TextView
            android:id="@+id/display_details_bg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/typography_title"
            tools:text="B+ve"  />

    </LinearLayout>

    <View
        android:layout_below="@id/bg_relative_layout"
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/padding_2x"
        android:background="@color/dividerColor"/>

    <LinearLayout
        android:layout_below="@id/divider_3"
        android:id="@+id/address_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:paddingLeft="@dimen/padding_default">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_location"
            android:alpha="0.54"
            android:layout_marginRight="@dimen/padding_2x"
            android:layout_marginEnd="@dimen/padding_2x"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/typography_title"
                android:text="@string/address"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_marginEnd="@dimen/padding_half"/>

            <TextView
                android:id="@+id/display_details_address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Location"
                android:textSize="@dimen/typography_subheading"/>



        </LinearLayout>

    </LinearLayout>


</RelativeLayout>